<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mac.gameclient.RestEtcActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/add_notice_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Notice"
                android:onClick="clickAddNoticeButton"/>
            <Button
                android:id="@+id/get_notice_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Notice"
                android:onClick="clickGetNoticeButton"/>
            <Button
                android:id="@+id/edit_notice_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Notice"
                android:onClick="clickEditNoticeButton"/>
            <Button
                android:id="@+id/delete_notice_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Notice"
                android:onClick="clickDeleteNoticeButton"/>
            <Button
                android:id="@+id/get_notice_list_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Notice List"
                android:onClick="clickGetNoticeListButton"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000"/>
            <Button
                android:id="@+id/add_version_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Version"
                android:onClick="clickAddVersionButton"/>
            <Button
                android:id="@+id/get_version_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Version"
                android:onClick="clickGetVersionButton"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
